<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <children>
        <TextArea fx:id="outputArea" VBox.vgrow="ALWAYS" />
        <TextField fx:id="sensorIdField" promptText="Sensor ID" />
        <TextField fx:id="sensorTypeField" promptText="Sensor Type" />
        <TextField fx:id="districtIdField" promptText="District ID" />
        <Button fx:id="addSensorButton" text="Add Sensor" />
        <Button fx:id="streamDataButton" text="Stream Data" />
        <Button fx:id="illuminateButton" text="Illuminate" />
        <Button fx:id="irrigationButton" text="Irrigation" />
    </children>
</VBox>